@{
    ViewData["Title"] = "Редактирование: блюдо";
}

@model LunchTool.Web.ViewModels.DishViewModel

<div class="row">
    <form asp-action="ChangeDish" asp-controller="Administration" method="post" class="card col-md-8 offset-md-2">
        <div class="form-group">
            <label for="Name">Название</label>
            <input type="text" name="Name" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Weight">Вес</label>
            <input type="number" step="any" name="Weight" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Price">Цена</label>
            <input type="number" step="0.01" name="Price" value="" class="form-control" />
        </div>      
        <div class="form-group">
            <input type="submit" name="" value="Потвердить" class="btn btn-primary" />
        </div>
    </form>
</div>
