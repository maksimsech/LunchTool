@{
    ViewData["Title"] = "Редактирование: блюдо";
}

@model LunchTool.Web.ViewModels.DishViewModel

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                Изменить блюдо
            </div>
            <form asp-action="ChangeDish" asp-controller="Administration" method="post" class="card-body">
                <input type="hidden" name="Id" value="@Model.Id" readonly />
                <div class="form-group">
                    <label for="Name">Название</label>
                    <input type="text" name="Name" value="@Model.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Weight">Вес</label>
                    <input type="text" name="Weight" id="Weight" value="@Model.Weight" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Price">Цена</label>
                    <input type="text" name="Price" id="Price" value="@Model.Price" class="form-control" />
                </div>
                <input type="hidden" name="MenuId" value="@Model.MenuId" />
                <div class="form-group">
                    <input type="submit" name="" value="Изменить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{ 
<script>
    $('#Weight').keypress(function (event) {
        if ((event.which != 44 || $(this).val().indexOf(',') != -1) && (event.which < 48 || event.which > 57)) {
            event.preventDefault();
        }
    });
    $('#Price').keypress(function (event) {
        if ((event.which != 44 || $(this).val().indexOf(',') != -1) && (event.which < 48 || event.which > 57)) {
            event.preventDefault();
        }
    });
</script>
}