@{
    ViewData["Title"] = "Администрирование: блюда";
    bool first = true;
}

@model Tuple<IEnumerable<LunchTool.Web.ViewModels.DishViewModel>, IEnumerable<LunchTool.Web.ViewModels.ProviderViewModel>>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                Добавить блюдо
            </div>
            <form asp-action="AddDish" asp-controller="Administration" method="post" class="card-body">
                <div class="form-group">
                    <label for="Name">Название</label>
                    <input type="text" name="Name" value="" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Weight">Вес</label>
                    <input type="text" name="Weight" id="Weight" value="" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Price">Цена</label>
                    <input type="text" name="Price" id="Price" value="" class="form-control" />
                </div>
                @if (Model.Item2 != null)
                {
                    <div class="form-group">
                        <label for="ProviderId">Поставщик</label>
                        <select name="ProviderId" id="ProviderId">
                            @foreach (var provider in Model.Item2)
                            {
                                if (first)
                                {
                                    <option value="@provider.Id" selected="selected">@provider.Name</option>
                                    first = false;
                                }
                                else
                                {
                                    <option value="@provider.Id">@provider.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group" id="menus">

                    </div>
                }
                else
                {
                    <input type="hidden" name="MenuId" value="@TempData["MenuId"]" />
                }
                <div class="form-group">
                    <input type="submit" name="" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
        </div>

    </div>
</div>

<div class="text-center" style="margin-top: 10px; margin-bottom: 10px">
    Список блюд
</div>

<div id="result">

</div>


@section Scripts
{ 
<script>
    $('#Weight').keypress(function (event) {
        if ((event.which != 44 || $(this).val().indexOf(',') != -1) && (event.which < 48 || event.which > 57)) {
            event.preventDefault();
        }
    });
    $('#Price').keypress(function (event) {
        if ((event.which != 44 || $(this).val().indexOf(',') != -1) && (event.which < 48 || event.which > 57)) {
            event.preventDefault();
        }
    });
</script>

@if (Model.Item2 != null)
{
    <script>
        $.post("GetMenusById/", { id: $("#ProviderId").val() }).done(function (result) { $("#menus").html(result) });
        $("#ProviderId").change(function () {
            var id = $(this).val();
            $.ajax({
                type: "POST",
                url: "GetMenusById/",
                data: { "id": id },
                success: function (result) {
                    $("#menus").html(result);
                }
            });
        });


    </script>
}
<script>
    $.post("/Administration/GetDishesPage",
        { "pageNumber": 1, "menuId": @TempData["MenuId"].ToString()})
        .done(function (result) {
            $("#result").html(result);
            addDishesListener();
        });
    function addDishesListener() {
        $("#prevPage").click(function (e) {
            e.preventDefault();
            $.post("/Administration/GetDishesPage",
                { "pageNumber": $("#prevPageNumber").text(), "menuId": @TempData["MenuId"].ToString()})
                .done(function (result) {
                    $("#result").html(result);
                    addDishesListener();
                });
        });
        $("#nextPage").click(function (e) {
            e.preventDefault();
            $.post("/Administration/GetDishesPage",
                { "pageNumber": $("#nextPageNumber").text(), "menuId": @TempData["MenuId"].ToString()})
                .done(function (result) {
                    $("#result").html(result);
                    addDishesListener();
                });
        });
    }


    function deleteDish(id) {
        $.post("DeleteDish/", { id: id }).always(function (done) { window.location.reload(true); });
    }
</script>
}