@{
    ViewData["Title"] = "Администрирование: блюда";
}

@model Tuple<IEnumerable<LunchTool.Web.ViewModels.DishViewModel>, IEnumerable<LunchTool.Web.ViewModels.MenuViewModel>>

<div class="row">
    <form asp-action="AddDish" asp-controller="Administration" method="post" class="card col-md-8 offset-md-2" data-ajax="true">
        <div class="form-group">
            <label for="Name">Название</label>
            <input type="text" name="Name" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Weight">Вес</label>
            <input type="number" step="any" name="Weight" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Price">Дата</label>
            <input type="number" step="0.01" name="Price" value="" class="form-control" />
        </div>
        <div class="form-group">
            <label for="ProviderId">Поставщик</label>
            <select name="ProviderId">
                @foreach (var provider in Model.Item2)
                {
                    <option value="@provider.Id">@provider.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" name="" value="Потвердить" class="btn btn-primary" />
        </div>
    </form>
</div>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Название</td>
        <td>Цена</td>
        <td>Вес</td>
        @foreach (var item in Model.Item1)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Weight</td>
        </tr>
    }
    </table>
