@{
    ViewData["Title"] = "Изменить: поставщик";
}

@model LunchTool.Web.ViewModels.ProviderViewModel

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                Изменить поставщика
            </div>
            <form asp-action="ChangeProvider" asp-controller="Administration" method="post" class="card-body">
                <input type="hidden" name="Id" value="@Model.Id" readonly />
                <div class="form-group">
                    <label for="Name">Название</label>
                    <input type="text" name="Name" value="@Model.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Address">Адрес</label>
                    <input type="text" name="Address" value="@Model.Address" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" name="Email" value="@Model.Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="StartWork">Начало</label>
                    <input type="time" name="StartWork" value="@Model.StartWork.Value.TimeOfDay" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="EndWork">Окончание работы</label>
                    <input type="time" name="EndWork" value="@Model.EndWork.Value.TimeOfDay" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="PhoneNumber">Номер</label>
                    <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                </div>
                <div class="form-check">
                    @Html.CheckBoxFor(p => p.Active, htmlAttributes: new { @class = "form-check-input" })
                    <label class="form-check-label" for="Active">Активен</label>
                </div>
                <div class="form-group">
                    <input type="submit" name="" value="Изменить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>    
</div>