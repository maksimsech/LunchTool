@model IEnumerable<LunchTool.Web.ViewModels.UserProvidersReportViewModel>

@foreach (var item in Model)
{
    <div class="text-right">
        <h1>@item.ProviderName</h1>
    </div>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">
                    ФИО
                </th>
                <th scope="col">
                    Заказов
                </th>
                <th scope="col">
                    Стоймость
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.OrderCount
                </td>
                <td>
                    @item.Price
                </td>
            </tr>
        </tbody>
    </table>
}