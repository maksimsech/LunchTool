@model IEnumerable<LunchTool.Web.ViewModels.DishViewModel>
@{ 
    var i = 0;
}
<table class="table">
    <tr>
        <td>Название</td>
        <td>Вес</td>
        <td>Цена</td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="display:none">
                <input type="number" readonly value="@item.Id" name="dishesForOrderModel[@i].Id"/>
            </td>
            <td>@item.Name</td>
            <td>@item.Weight</td>
            <td>@item.Price</td>
            <td>
                <input type="number" step="1" name="dishesForOrderModel[@i].Count" value="0" class="form-control"/>
            </td>
        </tr>
        i++;
    }
</table>
