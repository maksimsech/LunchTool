@model LunchTool.Web.ViewModels.UserViewModel


            <form asp-action="ChangeUser" asp-controller="Administration" method="post"  data-ajax="true" data-ajax-method="POST" data-ajax-success="onChangeComplete">
                <input type="hidden" name="Id" value="@Model.Id" readonly />
                <div class="form-group">
                    <label for="LastName">Фамилия</label>
                    <input type="text" name="LastName" value="@Model.LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="FirstName">Имя</label>
                    <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Patronymic">Отчество</label>
                    <input type="text" name="Patronymic" value="@if (@Model.Patronymic != null) {@Model.Patronymic}" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Username">Логин</label>
                    <input type="text" name="Username" value="@Model.Username" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" name="Email" value="@Model.Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="PhoneNumber">Номер телефона</label>
                    <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                </div>
                <div class="form-check">
                    @Html.CheckBoxFor(u => u.IsAdmin, htmlAttributes: new { @class = "form-check-input" })
                    <label for="IsAdmin">Администратор</label>
                </div>
                <div class="form-group">
                    <input type="submit" name="" value="Изменить" class="btn btn-primary" />
                </div>
            </form>
